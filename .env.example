# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/secure_document_management?schema=public"

# Application Configuration
NODE_ENV=development
PORT=3001

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key
BCRYPT_ROUNDS=12

# File Upload Configuration
MAX_FILE_SIZE=10485760 # 10MB
UPLOAD_PATH=./uploads
TEMP_PATH=./temp

# PostgreSQL Security Configuration
POSTGRES_SSL_MODE=require
POSTGRES_SSL_CA=./certs/ca-certificate.crt

# Audit Configuration
AUDIT_LOG_RETENTION_DAYS=2555 # 7 years
AUDIT_LOG_ENCRYPTION=true

# OCR Configuration
OCR_ENABLED=true
OCR_LANGUAGE=vie+eng

# Full-text Search Configuration
FTS_ENABLED=true
FTS_LANGUAGE=simple

# Notification Configuration
NOTIFICATION_RETENTION_DAYS=90
REAL_TIME_NOTIFICATIONS=true

# Digital Signature Configuration
DIGITAL_SIGNATURE_ENABLED=true
SIGNATURE_EXPIRY_DAYS=30

# Watermarking Configuration
WATERMARK_ENABLED=true
WATERMARK_TEXT="CONFIDENTIAL"

# DLP Configuration
DLP_ENABLED=true
DLP_PATTERNS=["credit_card", "ssn", "email", "phone"]

# DevSecOps Configuration
SAST_ENABLED=true
DAST_ENABLED=true
SECRET_SCANNING_ENABLED=true
