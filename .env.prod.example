# ===== PRODUCTION ENVIRONMENT VARIABLES =====
# Copy this file to .env.prod and update values for production

# Database Configuration - Production sẽ dùng Docker PostgreSQL
# Admin connection (superuser) - for migrations, seeds, and admin operations
DATABASE_ADMIN_URL="postgresql://postgres:your_strong_postgres_password_here@postgres:5432/secure_document_management?schema=public"
POSTGRES_PASSWORD=your_strong_postgres_password_here

# Application connection (app_role) - respects RLS policies for runtime queries
APP_ROLE_PASSWORD=your_strong_postgres_password_here
DATABASE_URL="postgresql://app_role:${APP_ROLE_PASSWORD}@postgres:5432/secure_document_management?schema=public"


# Application Configuration
NODE_ENV=production
PORT=3000
APP_URL=https://yourdomain.com
FRONTEND_URL=https://yourfrontend.com

# Gmail configuration
GMAIL_USER=your_gmail@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/auth/google/callback

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-long-random-string
JWT_ACCESS_EXPIRES=60m
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production-long-random-string
JWT_REFRESH_EXPIRES=7d
ENCRYPTION_KEY=your-32-character-encryption-key!!
BCRYPT_ROUNDS=12

# File Upload Configuration
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# Audit Configuration
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_ENCRYPTION=true

# OCR Configuration
OCR_ENABLED=true
OCR_LANGUAGE=vie+eng

# Full-text Search Configuration
FTS_ENABLED=true
FTS_LANGUAGE=simple

# Notification Configuration
NOTIFICATION_RETENTION_DAYS=90
REAL_TIME_NOTIFICATIONS=true

# Digital Signature Configuration
DIGITAL_SIGNATURE_ENABLED=true
SIGNATURE_EXPIRY_DAYS=30

# Watermarking Configuration
WATERMARK_ENABLED=true
WATERMARK_TEXT="CONFIDENTIAL"

# DLP Configuration
DLP_ENABLED=true
DLP_PATTERNS='["credit_card", "ssn", "email", "phone"]'